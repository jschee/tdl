<% list = @list if @list.present? %>
<ul class="mb-6">
  <li class="mb-2">
    <%= turbo_frame_tag dom_id(list) do %>
      <div class="flex justify-between items-center">
        <div>
          <%= link_to list.name, list_path(list), data: { turbo_frame: "_top"} %> <%= content_tag(:span, "#{list.tasks.complete.size} / #{list.tasks.size} completed", class: 'text-xs ml-1') %>
        </div>
        <div class="flex space-x-2">
          <span class="text-sm">
            <%= link_to "Edit", edit_list_path(list) %>
          </span>
          <span class="text-sm ml-2">
            <%= button_to "Delete", list, method: :delete, class: 'text-red-500 hover:text-red-600 text-sm underline hover:no-underline', form: { data: { turbo_confirm: "Are you sure?" } }%>
          </span>
        </div>
      </div>
    <% end %>
  </li>
</ul>
