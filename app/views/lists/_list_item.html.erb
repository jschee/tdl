<%= turbo_frame_tag dom_id(@list) do %>
  <div class="flex justify-between items-center">
    <%= link_to @list.name, list_path(@list), data: { turbo_frame: "_top"} %>
    <div>
      <span class="text-sm">
        <%= link_to "Edit", edit_list_path(@list) %>
      </span>
      <span class="text-sm ml-2">
        <%= link_to "Delete", @list, class: "text-red-500 hover:text-red-600 text-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
      </span>
    </div>
  </div>
<% end %>
