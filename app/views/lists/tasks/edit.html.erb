  <%= turbo_frame_tag dom_id(@task) do %>
    <%= form_with(model: @task, url: list_task_path(@list, @task), method: :patch) do |form| %>
      <div class="flex gap-4 items-center">
        <div class="flex-none">
          <%= check_box_tag "", "", false, { disabled: true } %>
        </div>
          <div class="flex-1">
            <%= form.text_field :description, class:'border px-2 w-full' %>
          </div>
          <div>
            <%= form.button class: "btn-primary text-sm ml-2" do %>
              <span class="show-when-enabled">
                Update
              </span>
              <span class="show-when-disabled">Updating...</span>
            <% end %>
            <span class="text-sm ml-2">
              <%= link_to "Cancel", list_path(@list), class: "ml-2 text-sm", data: { "turbo_frame": "_top" }  %>
            </span>
          </div>
      </div>
    <% end %>
  <% end %>
